<StartScreen>:
    Image:
        source: 'graphics/background.png' 
    BoxLayout:
        orientation: 'vertical'
        padding: 100,100,100,100
        Label:
            text: 'Family Quiz'
        Button: 
            on_press: root.manager.current = 'chooser'
            size_hint: .6,.4
            pos_hint: {'center_x': 0.25}
            background_normal: 'graphics/start.png'

<ChooseQuiz>:
    Image:
        source: 'graphics/background.png'
    GridLayout:
        cols: 2
        rows: 2
        padding: 150,150
        spacing: 20
        Button:
            name: 'biology'
            background_normal: 'graphics/biology.png'
            on_press: root.setOption(self.name); root.manager.current = 'play' 
        Button:
            name: 'history'
            background_normal: 'graphics/history.png'
            on_press: root.setOption(self.name); root.manager.current = 'play'
        Button:
            name: 'math'
            background_normal: 'graphics/math.png'
            on_press: root.setOption(self.name); root.managet.current = 'play'
        Button:
            name: 'geography'
            background_normal: 'graphics/geography.png'
            on_press: root.setOption(self.name); root.manager.current = 'play'

<PlayWidget>:
    Image:
        source: 'graphics/background.png'
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label:
            text: root.current_q_text
            Image:
        Button: 
            text: root.current_a_list[0]
            on_press: root.onClick(self.text); root.current_question += 1; root.parent.on_pre_enter();
        Button:
            text: root.current_a_list[1]
            on_press: root.onClick(self.text); root.current_question += 1; root.parent.on_pre_enter();
        Button:
            text: root.current_a_list[2]
            on_press: root.onClick(self.text); root.current_question += 1; root.parent.on_pre_enter();
        Button:
            text: root.current_a_list[3]
            on_press: root.onClick(self.text); root.current_question += 1; root.parent.on_pre_enter();

<PlayScreen>:
    quiz: id_q
    PlayWidget:
        id: id_q
         
<HighScoreScreen>:
    Image:
        source: 'graphics/background.png'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Correct Answers: ' + str(root.right_answers)
        Label:
            text: 'Wrong Answers: ' + str(root.wrong_answers)
        Button:
            text: 'To Menu'
            on_press: root.manager.current = 'menu' 

<StartScreen>:
    Image:
        source: 'graphics/background.png' 
    BoxLayout:
        orientation: 'vertical'
        padding: 100,50,100,100
        spacing: 300
        Image:
            pos_hint: {'top': 0.9}
            source: 'graphics/logo.png'
        Button: 
            on_press: root.onClickSound(); root.manager.current = 'chooser'
            size_hint: 0.8, 0.7
            pos_hint: {'center_x': 0.25}
            background_normal: 'graphics/start.png'
            background_down: 'graphics/start_down.png'
    Image:
        id: owl
        pos: 510 - self.width, 800 * 0.3 - 25
        size_hint: 0.3, 0.3
        source: 'graphics/owl.png'
    Image:
        id: questions
        pos: 150,400
        source:'graphics/questionmarks.png'

<ChooseQuiz>:
    Image:
        source: 'graphics/background.png'
    GridLayout:
        cols: 2
        rows: 2
        padding: 100,200
        spacing: 30
        Button:
            id: biology
            name: 'biology'
            size_hint: 1.0,1.0
            background_normal: 'graphics/biology.png'
            background_down: 'graphics/biology_down.png'
            on_press: root.onClickSound(); root.setOption(self.name); root.manager.current = 'play' 
        Button:
            name: 'history'
            background_normal: 'graphics/history.png'
            background_down: 'graphics/history_down.png'
            on_press: root.onClickSound(); root.setOption(self.name); root.manager.current = 'play'
        Button:
            name: 'math'
            background_normal: 'graphics/math.png'
            background_down: 'graphics/math_down.png'
            on_press: root.onClickSound(); root.setOption(self.name); root.manager.current = 'play'
        Button:
            name: 'geography'
            background_normal: 'graphics/geography.png'
            background_down: 'graphics/geography_down.png'
            on_press: root.onClickSound(); root.setOption(self.name); root.manager.current = 'play'

<PlayWidget>:
    Image:
        size: root.size
        source: 'graphics/background.png'
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        padding:150,100
        spacing: 10
        Label:
            text: root.current_q_text
            color: 0,0,0,1
            font_size: 24
        Button: 
            text: root.current_a_list[0]
            color: 0,0,0,1 
            font_size: 16
            size_hint_y: 0.9 
            background_normal: 'graphics/ButtonAup.png'
            background_down: 'graphics/ButtonAdown.png'
            on_press: root.onClick(self.text); root.current_question += 1; root.changeQuestion()
        Button:
            text: root.current_a_list[1] 
            color: 0,0,0,1
            font_size: 16 
            size_hint_y: 0.9            
            background_normal: 'graphics/ButtonBup.png'
            background_down: 'graphics/ButtonBdown.png'       
            on_press: root.onClick(self.text); root.current_question += 1; root.changeQuestion()
        Button:
            text: root.current_a_list[2] 
            color: 0,0,0,1
            font_size: 16
            background_normal: 'graphics/ButtonCup.png'
            background_down: 'graphics/ButtonCdown.png'
            size_hint_y: 0.9
            on_press: root.onClick(self.text); root.current_question += 1; root.changeQuestion()
        Button:
            text: root.current_a_list[3]
            color: 0,0,0,1
            font_size: 16 
            background_normal: 'graphics/ButtonDup.png'
            background_down: 'graphics/ButtonDdown.png' 
            size_hint_y: 0.9
            on_press: root.onClick(self.text); root.current_question += 1; root.changeQuestion()

<PlayScreen>:
    quiz: id_q
    PlayWidget:
        id: id_q
         
<HighScoreScreen>:
    Image:
        source: 'graphics/background.png'
    BoxLayout:
        spacing: 10
        padding: 100,100
        orientation: 'vertical'
        Label:
            text: 'Correct Answers: ' + str(root.right_answers)
            color: 0,0,0,1
            font_size: 40
        Label:
            text: 'Wrong Answers: ' + str(root.wrong_answers)
            color: 0,0,0,1
            font_size: 40
        Button:
            pos_hint: {'center_x': 0.25}
            size_hint: 0.8,0.7
            background_normal: 'graphics/back_up.png'
            background_down: 'graphics/back_down.png'
            on_press: root.onClickSound(); root.manager.current = 'menu' 
